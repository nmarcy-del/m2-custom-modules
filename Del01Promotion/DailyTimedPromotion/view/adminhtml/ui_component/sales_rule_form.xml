<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="rule_information">
        <field name="dailytimedpromotion_start_time" sortOrder="30" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">dailytimedpromotion_start_time</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="time" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">dailytimedpromotion.dailytimedpromotion_start_time</label>
                <notice translate="true">dailytimedpromotion.start.end_time.notice</notice>
            </settings>
        </field>
        <field name="dailytimedpromotion_end_time" sortOrder="40" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">dailytimedpromotion_end_time</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="time" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">dailytimedpromotion.dailytimedpromotion_end_time</label>
                <notice translate="true">dailytimedpromotion.start.dailytimedpromotion_end_time.notice</notice>
            </settings>
        </field>
    </fieldset>
</form>